<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".ui.options.OptionsFragment">

    <TextView
        style="@style/Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_mod" />

    <TextView
        style="@style/Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/configuration" />

    <TextView
        style="@style/Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/visit_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/profile_instagram"
            android:src="@drawable/iv_instagram" />

        <ImageView
            android:id="@+id/ivGitHub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/profile_github"
            android:src="@drawable/iv_github" />

        <ImageView
            android:id="@+id/ivLinkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/profile_linkedin"
            android:src="@drawable/iv_linkedin" />

        <ImageView
            android:id="@+id/ivX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/profile_x"
            android:src="@drawable/iv_x" />

    </LinearLayout>

</LinearLayout>